{
  "mongo-connector": {
    "namespaces": {
      "include":[],
      "isaridev.people": {
        "includeFields": [
          "firstName",
          "name",
          "birthName"
        ]
      },
      "isaridev.organizations": {
        "includeFields": [
          "acronym",
          "name",
          "nameAcronymeAliases"
        ]
      },
      "isaridev.activities": {
        "includeFields": [
          "acronym",
          "name"
        ]
      },
      "isaridev.editlogs": true
    }
  },
  "es": {
    "indexes": {
      "isaridev": {
        "settings": {
          "analysis": {
            "analyzer": {
              "default": {
                "type": "custom",
                "tokenizer": "standard",
                "filter": [
                  "lowercase",
                  "asciifolding"
                ]
              }
            }
          }
        }
      }
    }
  }
}