{
  "name": "isari-server",
  "version": "1.0.0",
  "description": "Isari REST API server",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "test": "mocha --check-leaks -R spec",
    "pretest": "npm run lint",
    "dev": "npm-run-all -p watch:*",
    "watch:test": "npm test -- --watch --growl -R dot",
    "watch:lint": "esw --watch",
    "watch:server": "cross-env NODE_ENV=development DEBUG=isari:* nodemon server.js",
    "lint": "eslint ."
  },
  "author": "Byte Club",
  "license": "ISC",
  "devDependencies": {
    "chai": "^3.5.0",
    "cross-env": "^2.0.0",
    "env-test": "^1.0.0",
    "eslint": "^3.3.1",
    "eslint-watch": "^2.1.14",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "npm-run-all": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "config": "^1.21.0",
    "connect-mongo": "^1.3.2",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "mongoose": "^4.5.10",
    "morgan": "^1.7.0",
    "toml": "^2.3.0"
  }
}
